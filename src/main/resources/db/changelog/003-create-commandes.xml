<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="souhail">
        <createTable tableName="commandes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="numero" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="date_commande" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="date_livraison_prevue" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="statut" type="VARCHAR(30)" defaultValue="EN_ATTENTE">
                <constraints nullable="false"/>
            </column>
            <column name="montant_total" type="DECIMAL(10,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="fournisseur_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="commandes"
                baseColumnNames="fournisseur_id"
                constraintName="fk_commandes_fournisseur"
                referencedTableName="fournisseurs"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>
