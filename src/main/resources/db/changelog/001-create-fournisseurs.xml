<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-fournisseurs" author="dev">
        <createTable tableName="fournisseurs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="raison_sociale" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="adresse" type="VARCHAR(200)"/>
            <column name="ville" type="VARCHAR(50)"/>
            <column name="personne_contact" type="VARCHAR(100)"/>
            <column name="email" type="VARCHAR(100)"/>
            <column name="telephone" type="VARCHAR(20)"/>
            <column name="ice" type="VARCHAR(15)">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
