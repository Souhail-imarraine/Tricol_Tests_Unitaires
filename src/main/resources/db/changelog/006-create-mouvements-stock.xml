<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="souhail">
        <createTable tableName="mouvements_stock">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_mouvement" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="type_mouvement" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="quantite" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="prix_unitaire" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="reference" type="VARCHAR(100)"/>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="lot_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="mouvements_stock"
            baseColumnNames="produit_id"
            constraintName="fk_mouvement_produit"
            referencedTableName="produits"
            referencedColumnNames="id"/>

        <addForeignKeyConstraint
            baseTableName="mouvements_stock"
            baseColumnNames="lot_id"
            constraintName="fk_mouvement_lot"
            referencedTableName="lots_stock"
            referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
