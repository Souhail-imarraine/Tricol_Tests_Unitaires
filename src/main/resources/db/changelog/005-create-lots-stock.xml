<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="souhail">
        <createTable tableName="lots_stock">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="numero_lot" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="date_entree" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="quantite_initiale" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="quantite_restante" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="prix_unitaire" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="commande_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="lots_stock"
            baseColumnNames="produit_id"
            constraintName="fk_lot_produit"
            referencedTableName="produits"
            referencedColumnNames="id"/>

        <addForeignKeyConstraint
            baseTableName="lots_stock"
            baseColumnNames="commande_id"
            constraintName="fk_lot_commande"
            referencedTableName="commandes"
            referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
